    <moduleMetadata>
      <moduleType>topicshell</moduleType>
      <moduleShortName>dacad-concept</moduleShortName>
      <shellPublicIds>
        <dtdShell>-//DaCaD//DTD DITA<var presep=" " name="ditaver"/> DaCaD Concept//EN</dtdShell>
        <rncShell>urn:com:docsascodeasdocs:dita:rnc:dacad-concept.rnc<var presep=":" name="ditaver"/></rncShell>
        <rngShell>urn:com:docsascodeasdocs:dita:rng:dacad-concept.rng<var presep=":" name="ditaver"/></rngShell>
        <xsdShell>urn:com:docsascodeasdocs:dita:xsd:dacad-concept.xsd<var presep=":" name="ditaver"/></xsdShell>
      </shellPublicIds>
    </moduleMetadata>
  </moduleDesc>

  <div>
    <a:documentation>ROOT ELEMENT DECLARATION</a:documentation>
    <start>
      <ref name="concept.element"/>
    </start>
  </div>
  <div>
    <a:documentation>DOMAINS ATTRIBUTE</a:documentation>
    <define name="domains-att" combine="interleave">
      <optional>
        <attribute name="domains"
          a:defaultValue="(topic abbrev-d)
                         (topic dacad-topicModConstraint-c)
                         (topic concept dacad-conceptModConstraint-c)
                         (topic hi-d dacad-hi-d)
                         (topic indexing-d dacad-indexing-d)
                         (topic pr-d dacad-pr-d)
                         (topic svg-d)
                         (topic sw-d dacad-sw-d)
                         (topic ui-d dacad-ui-d)     
                         a(props deliveryTarget)"
        />
      </optional>
    </define>

  </div>
  <div>
    <a:documentation>MODULE INCLUSIONS</a:documentation>
    <include href="../../base/rng/dacad-topicModConstraint.rng"/>
    <include href="dacad-conceptModConstraint.rng">
      <define name="concept-info-types">
        <ref name="concept.element"/>
      </define>
    </include>
    <include href="../../base/rng/dacad-highlightDomainConstraint.rng"/>
    <include href="../../base/rng/dacad-indexingDomainConstraint.rng"/>
    <include href="dacad-programmingDomainConstraint.rng"/>
    <include href="dacad-softwareDomainConstraint.rng"/>
    <include href="svgDomain.rng" dita:since="1.3"/>
    <include href="dacad-uiDomainConstraint.rng"/>

    <!-- include href="abbreviateDomain.rng"/ -->
    <include href="../../base/rng/deliveryTargetAttDomain.rng" dita:since="1.3"/>
    <!-- include href="markupDomain.rng" dita:since="1.3"/ -->
    <!-- include href="releaseManagementDomain.rng" dita:since="1.3"/ -->
    <!-- include href="../../base/rng/utilitiesDomain.rng"/ -->
    <!-- include href="xmlDomain.rng"/ -->

  </div>
  <div>
    <a:documentation>ID-DEFINING-ELEMENT OVERRIDES</a:documentation>
    <define name="any">
      <zeroOrMore>
        <choice>
          <ref name="idElements"/>
          <element>
            <anyName>
              <except>
                <name>concept</name>
                <name>topic</name>
                <nsName ns="http://www.w3.org/2000/svg"/>
                <nsName ns="http://www.w3.org/1998/Math/MathML"/>
              </except>
            </anyName>
            <zeroOrMore>
              <attribute>
                <anyName/>
              </attribute>
            </zeroOrMore>
            <ref name="any"/>
          </element>
          <text/>
        </choice>
      </zeroOrMore>
    </define>
  </div>
</grammar>
